<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".DiaryActivity">


    <!--Edittext: Input title as string-->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="388dp"
        android:layout_height="37dp"
        android:fontFamily="cursive"
        android:text="Feel free to write a diary"
        android:textAlignment="center"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/titleET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/purple_200"
        android:color="@color/white"
        android:hint="Title"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="20sp" />

    <!--Edittext: Input desc as string-->


    <!--Button: Save/Upload data to the firebase cloud Firestore-->
    <EditText
        android:id="@+id/descET"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_margin="2dp"
        android:background="@color/purple_200"
        android:gravity="start"
        android:hint="dear diary..."
        android:inputType="textMultiLine|textCapSentences"
        android:minHeight="250dp"
        android:padding="10dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/BtnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Save your diary" />

    <!--Button: Save/Upload data to the firebase cloud Firestore-->
    <Button
        android:id="@+id/BtnShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="View your diaries" />


</LinearLayout>